<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.FormFragment.FormFragment">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_nfc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/id_nfc"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_toStartOf="@id/textFormIdNFC"
            android:padding="@dimen/_10sdp"
            android:layout_toLeftOf="@id/textFormIdNFC" />
            <TextView
                android:id="@+id/textFormIdNFC"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/_123123123"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/ktp_tidak_terdaftar_di_wilayah_depok"-->
            <!--android:padding="@dimen/_10sdp"-->
            <!--android:background="@color/blue"-->
            <!--android:textColor="@color/red"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_orang_tau"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:textAlignment="center"
            android:paddingStart="@dimen/_10sdp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtFormNIK"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nik"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtFormNamaOrtu"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nama_orang_tua"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtFormTanggalLahirOrtu"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:editable="false"
                android:focusable="false"
                android:hint="@string/tanggal_lahir_orang_tua"
                android:drawableStart="@drawable/ic_today"
                android:drawableLeft="@drawable/ic_today" />
        </com.google.android.material.textfield.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey"/>

    </LinearLayout>
      <TextView
          android:id="@+id/dataAnakTitle"
          android:layout_below="@+id/linearLayout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/data_anak"
          android:textAppearance="@style/TextAppearance.AppCompat.Large"
          android:textColor="@color/black"
          android:padding="@dimen/_5sdp"
          android:textAlignment="center"/>
      <androidx.recyclerview.widget.RecyclerView
          android:layout_below="@id/dataAnakTitle"
          android:id="@+id/recyclerViewForm"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_above="@+id/cardViewForm"/>

      <androidx.cardview.widget.CardView
          android:id="@+id/cardViewForm"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          card_view:cardElevation="2dp"
          card_view:cardBackgroundColor="@android:color/white">
          <Button
              android:id="@+id/btnFormSimpanData"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:background="@drawable/rectangle_blue"
              android:layout_margin="8dp"
              android:text="@string/simpan"
              android:textAppearance="@style/TextAppearance.AppCompat.Medium"
              android:textColor="@color/blue"
              android:textAllCaps="false"/>
      </androidx.cardview.widget.CardView>


  </RelativeLayout>
</FrameLayout>