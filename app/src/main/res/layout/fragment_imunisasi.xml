<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".UI.UpdateFragment.PilihanFragment">
    <TextView
        android:id="@+id/textImunisasiNamaAnak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/nama_anak"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="@string/pilih_imunisasi_yang_ingin_diberikan"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"  />
    <RadioGroup
        android:id="@+id/radioGroupImunisasi"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rbImunisasiBCG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imunisasi BCG"/>
        <RadioButton
            android:id="@+id/rbImunisasiDPT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imunisasi DPT"/>
        <RadioButton
            android:id="@+id/rbImunisasiPOLIO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imunisasi POLIO"/>
        <RadioButton
            android:id="@+id/rbImunisasiCampak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imunisasi CAMPAK"/>
        <RadioButton
            android:id="@+id/rbImunisasiHepatitis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imunisasi HEPATITIS B"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/buttonImunisasiCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF1100"
            android:textColor="@color/white"
            android:text="Batalkan"/>
    <Button
        android:id="@+id/buttonImunisasiBerikan"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:backgroundTint="#9C27B0"
        android:textColor="@color/white"
        android:text="Berikan"/>


    </LinearLayout>
</LinearLayout>